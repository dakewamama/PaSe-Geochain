{
  "name": "@civic/gateway-client-react",
  "version": "1.2.1",
  "repository": "git@github.com:civicteam/ociv-gatekeeper.git",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn generate-version && yarn build:esm && yarn build:cjs",
    "build:cjs": "tsc --noEmit false --preserveConstEnums true --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --noEmit false --preserveConstEnums true --outDir dist/esm",
    "clean": "rm -rf ./dist",
    "generate-version": "yarn script ./src/config/generateVersion ./package.json ./src/version.ts",
    "lint": "eslint -c ./.eslintrc.json '{src,test}/**/*.ts' --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "prepare": "yarn build",
    "prepublish": "yarn generate-version",
    "script": "ts-node -O '{\"module\":\"commonjs\"}' --transpile-only --files",
    "test": "yarn jest --runInBand"
  },
  "dependencies": {
    "@civic/gateway-client-core": "1.1.1",
    "@testing-library/react-hooks": "^8.0.1",
    "fetch-retry": "^5.0.6",
    "iframe-resizer-react": "^1.0.8",
    "ramda": "^0.28.0",
    "styled-components": "^5.3.1",
    "uuid": "^9.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.13",
    "@types/react-test-renderer": "^18.3.0",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsonc": "^2.0.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ts-jest": "^26.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "gitHead": "f6282f6628701fc1bfdf53aae2202ccb3f463570"
}
